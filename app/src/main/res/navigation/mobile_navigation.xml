<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/management_idea_fragment">

    <fragment
        android:id="@+id/home_idea_fragment"
        android:name="com.killua.ideenplattform.ui.home.HomeFragment"
        android:label="@string/title_home_idea"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.killua.ideenplattform.ui.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" />
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.killua.ideenplattform.ui.details.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >
        <action
            android:id="@+id/action_detailFragment_to_management_idea_fragment"
            app:destination="@id/management_idea_fragment" />
    </fragment>
    <fragment
        android:id="@+id/management_idea_fragment"
        android:name="com.killua.ideenplattform.ui.newidee.ManagementIdeaFragment"
        android:label="fragment_new_idee"
        tools:layout="@layout/fragment_new_idee" >
        <argument
            android:name="id_of_idea"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.killua.ideenplattform.ui.signup.SignupFragment"
        android:label="fragment_signup"
        tools:layout="@layout/fragment_signup" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.killua.ideenplattform.ui.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />

</navigation>